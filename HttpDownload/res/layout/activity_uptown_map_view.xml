<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConestogaMapView" >
    
       <ImageView
           android:id="@+id/uptown_map"
           android:layout_width="237dp"
           android:layout_height="342dp"
           android:contentDescription="@string/uptown_map_desc"
           android:src="@drawable/ic_launcher" />

       <Button
           android:id="@+id/uptown_ad_view_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignRight="@+id/uptown_map"
           android:layout_below="@+id/uptown_map"
           android:layout_marginRight="70dp"
           android:layout_marginTop="14dp"
           android:gravity="center_vertical|center_horizontal|left"
           android:text="@string/viewads_button" />

</RelativeLayout>